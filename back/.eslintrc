{
    "parser": "@typescript-eslint/parser",
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
        "requireConfigFile": false
    },
    "env": {
        "es6": true,
        "jest": true
    },
    "rules": {
        "semi": "error",
        "max-len": [
            "error",
            180
        ],
        "indent": [
            "error",
            4
        ],
        "no-tabs": "off",
        "quotes": [
            "error",
            "double"
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "no-shadow": [
            "error"
        ],
        "object-curly-newline": [
            "error",
            {
                "consistent": true
            }
        ],
        "array-bracket-spacing": [
            "error",
            "always"
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ]
    }
}
